---
// src/layout/Base.astro
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
const { title } = Astro.props;
---
<!doctype html>
<html lang="pt-BR">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title ? `${title} - Katholikos`: 'Katholikos - Artigos, Livros e Recursos'}</title>
        <meta name="description" content="Uma curadoria de artigos, livros e recursos para aprofundar sua fÃ© e conhecimento." />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    </head>
    <body class="bg-black text-white">
        <Navbar />
        <main class="max-w-6xl mx-auto px-6 py-8">
            <slot />
        </main>
        <Footer />
    </body>
</html>