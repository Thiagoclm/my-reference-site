---
import Layout from '../../layouts/Base.astro';
import { getCategoryGroups } from '../../lib/content-browse';

const base = import.meta.env.BASE_URL;
const categories = getCategoryGroups();

export function getStaticPaths() {
    const categoryGroups = getCategoryGroups();
    return categoryGroups.map((category) => ({
        params: { categoria: category.slug },
    }));
}

const { categoria } = Astro.params;
const currentCategory = categories.find((category) => category.slug === categoria);
---

<Layout title={currentCategory ? `Categoria: ${currentCategory.name}` : 'Categoria'}>
    <div class="max-w-6xl mx-auto">
        {currentCategory ? (
            <>
                <div class="mb-10">
                    <a href={`${base}categorias`} class="text-sm text-blue-400 hover:text-blue-300 transition">← Voltar para categorias</a>
                    <h1 class="text-4xl md:text-5xl font-serif font-bold text-white mt-4 mb-3 capitalize">
                        {currentCategory.name}
                    </h1>
                    <p class="text-xl text-gray-300">{currentCategory.count} recurso(s) nesta categoria</p>
                </div>

                <div class="space-y-6">
                    {currentCategory.entries.map((entry) => (
                        <article class="bg-gray-900 border border-gray-800 rounded-xl p-6">
                            <div class="flex flex-wrap gap-2 mb-3">
                                {entry.tags.map((tag) => (
                                    <span class="bg-blue-900 text-blue-300 text-xs font-semibold px-3 py-1 rounded-full">{tag}</span>
                                ))}
                            </div>
                            <h2 class="text-2xl font-serif font-bold text-white mb-2">{entry.title}</h2>
                            {entry.summary && <p class="text-gray-300 mb-4">{entry.summary}</p>}
                            <a href={entry.category === 'artigos' ? `${base}artigos/${entry.slug}` : `${base}recurso/${entry.slug}`} class="text-blue-400 font-semibold hover:text-blue-300 transition">
                                Abrir recurso →
                            </a>
                        </article>
                    ))}
                </div>
            </>
        ) : (
            <section class="bg-gray-900 border border-gray-800 rounded-xl p-10 text-center">
                <h1 class="text-3xl font-serif font-bold text-white mb-3">Categoria não encontrada</h1>
                <a href={`${base}categorias`} class="text-blue-400 hover:text-blue-300 transition">Ver todas as categorias</a>
            </section>
        )}
    </div>
</Layout>
