---
const {title, summary, cover, link, tags} = Astro.props;
---
<article class="border rounded-lg overflow-hidden hover:shadow-md transition p-0">
    <a href={link} target="_blank" rel="noopener noreferrer" class="block">
        <img src={cover} alt={title} class="w-full h-44 object-cover" loading="lazy" />
        <div class="p-4">
            <h3 class="font-semibold">{title}</h3>
            <p class="mt-3 text-xs text-gray-500">{tags?.join(' . ')}</p>
        </div>
    </a>
</article>